{
    "name": "maispace/theme",
    "type": "typo3-cms-extension",
    "description": "Theme extension for TYPO3 CMS",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.maispace.de",
    "authors": [{
        "name": "Joel Maximilian Mai",
        "email": "joel@maispace.de",
        "role": "Lead Developer"
    }],
    "autoload": {
        "psr-4": {
            "Maispace\\Theme\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Maispace\\Theme\\Tests\\": "Tests"
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "theme"
        },
        "branch-alias": {
            "dev-main": "13.0.x-dev"
        }
    },
    "require": {
        "maispace/assets": "^13.0"
    },
    "require-dev": {
        "armin/editorconfig-cli": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.0",
        "helmich/typo3-typoscript-lint": "^3.1",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^11.0",
        "saschaegerer/phpstan-typo3": "^2.0",
        "typo3/testing-framework": "^8.0"
    },
    "scripts": {
        "lint:check": [
            "@check:editorconfig",
            "@check:phpcs",
            "@check:phpstan",
            "@check:typoscript",
            "@composer validate --strict --no-check-version --no-check-all --no-check-publish"
        ],
        "lint:fix": [
            "@fix:editorconfig",
            "@fix:phpcs",
            "@check:phpstan",
            "@check:typoscript"
        ],
        "check:editorconfig": "ec -unv -e vendor/ -e public/",
        "fix:editorconfig": "ec -unvf -e vendor/ -e public/",
        "check:phpcs": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer check --config .php-cs-fixer.php --ansi --verbose --diff",
        "fix:phpcs": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix --config .php-cs-fixer.php --ansi",
        "check:phpstan": "phpstan analyse --no-progress",
        "check:phpstan:baseline": "phpstan analyse --no-progress --generate-baseline=phpstan-baseline.neon",
        "check:typoscript": "typoscript-lint --fail-on-warnings -c typoscript-lint.yml Configuration/TypoScript/",
        "test": "phpunit --configuration phpunit.xml.dist --testdox",
        "test:unit": "phpunit --configuration phpunit.xml.dist --testsuite Unit",
        "test:fluid": "phpunit --configuration phpunit.xml.dist --testsuite Fluid"
    },
    "config": {
        "allow-plugins": {
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true
        },
        "sort-packages": true
    }
}
