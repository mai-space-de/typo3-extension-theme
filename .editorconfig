# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files — no line length limit (URLs, tables, badges exceed 80 chars)
[*.md]
max_line_length = off

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yaml,yml}]
indent_size = 2

# NEON files (PHPStan / Nette) — tabs required by parser
[*.neon]
indent_size = 2
indent_style = tab

# TypoScript / TSconfig
[*.{typoscript,tsconfig}]
indent_size = 4
